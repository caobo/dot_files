cmd mkdir %mkdir $1
cmd mkfile %touch $1

map x $$f
map X !$f
map o &open $f
# map O $open --ask $f
map m
map md push :mkdir<space>
map mf push :mkfile<space>

map gda cd ~/Documents/Data/
map gca cd ~/Documents/Calculation/
map gen cd ~/Documents/Notes/Experiments_notes/
