{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.1-beta.1",
  "schemes" : [
    {
      "buttons" : {
        "clickDebouncing" : {
          "timeout" : 0
        },
        "mappings" : [
          {
            "action" : "mouse.button.back",
            "button" : 3,
            "command" : false,
            "control" : false,
            "option" : false,
            "shift" : false
          },
          {
            "action" : "mouse.button.forward",
            "button" : 4,
            "command" : false,
            "control" : false,
            "option" : false,
            "shift" : false
          },
          {
            "action" : "smartZoom",
            "button" : 5,
            "command" : false,
            "control" : false,
            "option" : false,
            "shift" : false
          }
        ],
        "universalBackForward" : true
      },
      "if" : {
        "device" : {
          "category" : "mouse",
          "productID" : "0xc548",
          "productName" : "USB Receiver",
          "vendorID" : "0x46d"
        }
      },
      "pointer" : {
        "acceleration" : 1.2,
        "disableAcceleration" : true
      },
      "scrolling" : {
        "acceleration" : {
          "vertical" : 1
        },
        "distance" : {
          "vertical" : 2
        },
        "modifiers" : {
          "vertical" : {
            "shift" : {
              "type" : "alterOrientation"
            }
          }
        },
        "reverse" : {
          "vertical" : true
        },
        "speed" : {
          "vertical" : 0
        }
      }
    }
  ]
}